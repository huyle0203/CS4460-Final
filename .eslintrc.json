{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "no-unused-vars": "off", // Disable basic no-unused-vars rule
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }], // Change TypeScript unused variables to warnings, ignoring those starting with _
    "react-hooks/exhaustive-deps": "warn" // Optional: Suppress react-hooks exhaustive-deps errors to warnings
  }
}
